@model OBTM.Core.Models.Ticket

@{
    ViewBag.Title = "CancelTicketViews";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h3>For Ticket Cancel</h3>
@using (Html.BeginForm("CancelTicketConfirm","Ticket"))
{
    <div class="form-horizontal">
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <div class="form-group row">
            @Html.Label("Ticket Pin :", htmlAttributes: new { @class = "control-Label col-md-2 " })
            <div class="form-group col-md-2">
                @Html.EditorFor(model => model.TicketPIN, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.TicketPIN, "", new { @class = "text-danger" })
            </div>
        </div>
        <div class="form-group row">
            @Html.Label("Cell No :", htmlAttributes: new { @class = "control-Label col-md-2 " })
            <div class="form-group col-md-2">
                @Html.EditorFor(model => model.CellNo, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.CellNo, "", new { @class = "text-danger" })
            </div>
        </div>
        <div class="col-md-2">
            <input type="submit" value="Enter" class="btn btn-default" />
        </div>
    </div>

}

