@model OBTM.Core.Models.Ticket

@{
    ViewBag.Title = "CancelTicketViews";
    Layout = "~/Views/Shared/UserLayout.cshtml";
}

<h3 style="text-align:center">Cancel Ticket</h3>
<div class="col-sm-6" style="margin:auto; float:none">
    @using (Html.BeginForm("CancelTicketConfirm", "Ticket"))
    {
        @Html.HiddenFor(m => m.Id)
        <div class="form-horizontal">
            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
            <div class="form-group row">
                @Html.Label("Ticket Pin :", htmlAttributes: new { @class = "control-Label col-md-4 " })
                <div class="form-group col-md-6">
                    @Html.EditorFor(model => model.TicketPIN, new { htmlAttributes = new { @class = "form-control", @placeholder = "Enter your Ticket Pin" } })
                    @Html.ValidationMessageFor(model => model.TicketPIN, "", new { @class = "text-danger" })
                </div>
                <label class="required"></label>
            </div>
            <div class="form-group row">
                @Html.Label("Cell No :", htmlAttributes: new { @class = "control-Label col-md-4 " })
                <div class="form-group col-md-6">
                    @Html.EditorFor(model => model.CellNo, new { htmlAttributes = new { @class = "form-control", @placeholder = "Enter your Cell no" } })
                    @Html.ValidationMessageFor(model => model.CellNo, "", new { @class = "text-danger" })
                </div>
                <label class="required"></label>
            </div>
            <div class="col-md-2 col-sm-offset-4">
                <input type="submit" value="Enter" class="btn btn-primary" />
            </div>
        </div>

    }
</div>

