@model OBTM.Core.Models.SearchBus


@{
    ViewBag.Title = "SearchResult";
}


<h4 style="text-align:center">Search Result</h4>
@using (Html.BeginForm("ViewSeat", "BusSearch",FormMethod.Post))
{
    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
    <hr height="200px" />

    <div class="form-horizontal">
        <div class="form-group row">

            @Html.Label("Modify Search :", htmlAttributes: new { @class = "control-Label col-md-1 " })

            @Html.LabelFor(model => model.From, htmlAttributes: new { @class = "form-group col-md-1" })
            <div class="form-group col-md-2">
                @Html.EditorFor(m => m.FromLocation)
                @Html.ValidationMessageFor(m => m.FromLocation, "", new { @class = "text-danger" })
            </div>
            @Html.LabelFor(model => model.To, htmlAttributes: new { @class = "form-group col-md-1" })
            <div class="form-group col-md-2">
                @Html.EditorFor(m => m.ToLocation)
                @Html.ValidationMessageFor(m => m.ToLocation, "", new { @class = "text-danger" })
            </div>
            @Html.LabelFor(model => model.DepartureDate, htmlAttributes: new { @class = "form-group col-md-2" })
            <div class="form-group col-md-2">
                @Html.EditorFor(model => model.DepartureDate, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.DepartureDate, "", new { @class = "text-danger" })
            </div>
            <div class="col-md-2">
                <input type="submit" value="Search" class="btn btn-default" />
            </div>

        </div>
        <hr height="200px" />
        <div class="form-group row">
            @Html.Label("Filter By :", htmlAttributes: new { @class = "control-Label col-md-2 " })
            <div class="form-group col-md-2">
                <select class="form-group" id="busOperatorFilter">
                    <option selected title="Select Bus Operator">Select Bus Operator</option>
                    @foreach (var item in ViewBag.BusOperatorList)
                    {
                        <option id="busOperator" value="@item.Id">@item.Name</option>

                    }
                </select>
            </div>
            <div class="form-group col-md-2">
                <select class="form-group" id="busTypeFilter">
                    <option selected title="">Select Bus Type</option>
                    <option id="busType" value="AC">Ac</option>
                    <option id="busType" value="NonAC">Non-Ac</option>
                </select>
            </div>
        </div>
        <hr height="200px" />
        <table class="table">
            <tr>
                <th>
                    Bus Operator Name
                </th>
                <th>
                    DepartureTime
                </th>
                <th>
                    Route
                </th>
                <th>
                    Bus Type
                </th>
                <th>
                    Available Seat Number
                </th>
                <th>
                    Fare
                </th>
                <th>

                </th>
            </tr>
            @foreach (var item in Model.GetDateWiseTrip)
            {
            <tr>
                <td>
                    @item.TripBase.BusOperator.Name
                </td>
                <td>
                    @item.TripBase.DepartureTime.TimeOfDay
                </td>
                <td>
                    @item.TripBase.Route.RouteName
                </td>
                <td>
                    @item.TripBase.BusType
                </td>
                <td>
                    @item.NoOfSeat
                </td>

                <td>
                    @item.Fare
                </td>
                <td>
                    @Html.ActionLink("Continue Purchase", "ViewSeat", new { dateWiseTripId = item.Id })

                </td>
            </tr>
            }
        </table>

    </div>

}


