
@{
    ViewBag.Title = "ViewSeat";
}


<link rel="stylesheet" href="~/Content/SeatPlan.css" />
<script>
    $(document).ready(function () {
    var settings = {
        rows: 10,
        cols: 4,
        rowCssPrefix: 'row-',
        colCssPrefix: 'col-',
        seatWidth: 35,
        seatHeight: 35,
        seatCss: 'seat',
        selectedSeatCss: 'selectedSeat',
        selectingSeatCss: 'selectingSeat'
        };

        var seatName =  @Html.Raw(Json.Encode(ViewBag.SeatNameList));
        var availableSeats = @Html.Raw(Json.Encode(ViewBag.SeatNoList));
        var dateWiseTripId=@Html.Raw(Json.Encode(ViewBag.DateWiseTripId));
    var init = function (availableSeats) {
        var str = [], seatNo, className;
        for (i = 0; i < settings.rows; i++) {
            for (j = 0; j < settings.cols; j++) {
                seatNo = (i * settings.cols + j + 1);
                className = settings.seatCss + ' ' + settings.rowCssPrefix + i.toString() + ' ' + settings.colCssPrefix + j.toString();
                if ($.isArray(availableSeats) && $.inArray(seatNo, availableSeats) == -1) {
                    className += ' ' + settings.selectedSeatCss;
                }

                str.push('<li class="' + className + '"' +
                    'style="top:' + (i * settings.seatHeight).toString() + 'px;left:' + (j * settings.seatWidth).toString() + 'px">' +
                    '<a title="' + seatName[seatNo-1] + '">' + seatName[seatNo-1] + '</a>' +
                    '</li>');
            }
        }
        $('#place').html(str.join(''));
    };
    //case I: Show from starting
    //init();
    //Case II: If already booked



        debugger;
    // var bookedSeats = [5, 10, 25];
        init(availableSeats);
    var noOfSelectedSeat = 0;
        var totalFare = 0;
        var seatList = [], item;
    $('.' + settings.seatCss).click(function () {

        var str = [];
        if ($(this).hasClass(settings.selectedSeatCss)) {
            alert('This seat is already reserved');
        }
        else {
            $(this).toggleClass(settings.selectingSeatCss);

        }

        noOfSelectedSeat = $('#place li.' + settings.selectingSeatCss + ' a').length;

        $.each($('#place li.' + settings.selectingSeatCss + ' a'), function (index, value) {
            item = $(this).attr('title');
            str.push(item);

        });
        totalFare = noOfSelectedSeat * @Html.Raw(Json.Encode(ViewBag.TotalFare));
        $("#totalFare").text(totalFare);
        $("#selectedSeats").text(str.join(','));
        seatList = str;
    });

        $('#purchase').click(function () {
            debugger;
            var queryString = seatList.join(",");
            debugger;
            window.location.href = '/Ticket/ShowTicketInfo?seatList=' + queryString + '&totalFare=' + totalFare + '&dateWiseTripId=' + dateWiseTripId;
        })


});


</script>
<div id="body">
    <h2>Choose Seat</h2>
    <div class="row">
        <div class="col-lg-6">
            <div id="holder">
                <ul id="place"></ul>
            </div>
            <div style="float:left;">
                <ul id="seatDescription">
                    <li style="background:url('../../Content/Picture/Green.png') no-repeat scroll 0 0 transparent;">Selected Seat</li>
                    <li style="background:url('../../Content/Picture/Red.png') no-repeat scroll 0 0 transparent;">Booked Seat</li>
                </ul>
            </div>
            @*<div style="clear:both;width:100%">

                    <input type="button" id="btnShowNew" value="Show Selected Seats" />
                    <input type="button" id="btnShow" value="Show All" />
                </div>*@
        </div>
        <div class="col-lg-6">
            <div>
                <lebel>Selected Seats:</lebel>
                <label id="selectedSeats"></label>
            </div>
            <div>
                <label>Fare per seat:</label>
                <lebel>1000</lebel>
            </div>
            <div>
                <label>Total Fare:</label>
                <label id="totalFare"></label>
            </div>
            <div>
                <button type="submit" id="purchase">Continue Purchase</button>

                @*<button type="submit" id="purchase" onclick="location.href='@Url.Action("TicketInfo","Ticket")'">Continue Purchase</button>*@
            </div>
        </div>


    </div>
</div>








