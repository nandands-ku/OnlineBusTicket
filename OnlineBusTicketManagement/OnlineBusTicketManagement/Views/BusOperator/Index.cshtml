@model IEnumerable<OBTM.Core.Models.BusOperator>

@{
    ViewBag.Title = "Index";
}
    <div class="row">
        <div class="col-md-2">
            @Html.Partial("NavbarPartial")
        </div>
        <div class="col-md-10">
            <input type="button" class="btn btn-success" value="Create New" onclick="location.href='@Url.Action("CreateBusOperator", "BusOperator")'" />
            @*@Html.ActionLink("Create New", "CreateBusOperator")*@
            <table class="table">
                <tr>
                    <th>Name</th>
                    <th>Email</th>
                    <th></th>
                </tr>


                @foreach (var item in Model)
                {
                    <tr>
                        <td>@item.Name</td>
                        <td>@item.Email</td>
                        <td>
                            @Html.ActionLink("Edit", "Edit", new { id = item.Id }) |
                            @Html.ActionLink("Details", "Details", new { id = item.Id, Name = item.Name, Email = item.Email }) |
                            @Html.ActionLink("Delete", "Delete", new { id = item.Id })
                        </td>
                    </tr>
                }

            </table>
        </div>
    </div>


