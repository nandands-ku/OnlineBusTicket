@model IEnumerable<OBTM.Core.Models.BusOperator>

@{
    Layout = "~/Views/Shared/_Layout.cshtml";
    ViewBag.Title = "Index";
}
    <div class="row">
        <div class="col-md-2">
            @Html.Partial("NavbarPartial")
        </div>
        <div class="col-md-10">
            <h3>Bus Operators</h3>
            <input type="button" class="btn btn-primary" value="Create New" onclick="location.href='@Url.Action("CreateBusOperator", "BusOperator")'" />
            @*@Html.ActionLink("Create New", "CreateBusOperator")*@
            <table class="table" id="myTable">
                <tr>
                    <th>Name</th>
                    <th>Email</th>
                    <th></th>
                </tr>


                @foreach (var item in Model)
                {
                    <tr>
                        <td>@item.Name</td>
                        <td>@item.Email</td>
                        <td>
                            @Html.ActionLink("Edit", "Edit", new { id = item.Id }) |
                            @Html.ActionLink("Delete", "Delete", new { id = item.Id })
                        </td>
                    </tr>
                }

            </table>
            <div class="pagination-container" style="text-align:center">
                <nav>
                    <ul class="pagination"></ul>
                </nav>
            </div>
        </div>
    </div>


